<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>OfbizDemo Services</description>
    <vendor />
    <version>1.0</version>
    <service name="createOfbizDemo" default-entity-name="OfbizDemo" engine="entity-auto" invoke="create" auth="true">
        <description>Create an Ofbiz Demo record</description>
        <auto-attributes include="pk" mode="OUT" optional="false" />
        <auto-attributes include="nonpk" mode="IN" optional="false" />
        <override name="comments" optional="true" />
    </service>
    <service name="createOfbizDemoByJavaService" default-entity-name="OfbizDemo" engine="java" location="com.companyname.ofbizdemo.services.OfbizDemoServices" invoke="createOfbizDemo" auth="true">
        <description>Create an Ofbiz Demo record using a service in Java</description>
        <auto-attributes include="pk" mode="OUT" optional="false" />
        <auto-attributes include="nonpk" mode="IN" optional="false" />
        <override name="comments" optional="true" />
    </service>
    <service name="createOfbizDemoByGroovyService" default-entity-name="OfbizDemo" engine="groovy" location="component://ofbizDemo/groovyScripts/ ofbizDemo/OfbizDemoServices.groovy" invoke="createOfbizDemo" auth="true">
        <description>Create an Ofbiz Demo record using a service in Groovy</description>
        <auto-attributes include="pk" mode="OUT" optional="false" />
        <auto-attributes include="nonpk" mode="IN" optional="false" />
        <override name="comments" optional="true" />
    </service>

    //=============================================StartingProductionRun================================================

    <service name="productionInterface" engine="interface">
        <attribute type="String" mode="IN" name="productId" optional="false" />
        <attribute type="BigDecimal" mode="IN" name="pRQuantity" optional="false" />
        <attribute type="java.sql.Timestamp" mode="IN" name="startDate" optional="false" />
        <attribute type="String" mode="IN" name="facilityId" optional="false" />
        <attribute type="String" mode="IN" name="routingId" optional="true" />
        <attribute type="String" mode="IN" name="workEffortName" optional="true" />
        <attribute type="String" mode="IN" name="description" optional="true" />
        <attribute type="String" mode="OUT" name="productionRunId" optional="false" />
    </service>
    <service name="createProduction" engine="java" location="com.companyname.ofbizdemo.services.OfbizDemoServices" invoke="createProduction" auth="true">
        <description>Create a production run service in java</description>
        <implements service="productionInterface" />
    </service>
    <service name="createProductionRunJavaService" engine="java" location="com.companyname.ofbizdemo.services.OfbizDemoServices" invoke="createProductionRunJava" auth="true">
        <description>Create a production run service in java</description>
        <implements service="productionInterface" />
    </service>
    <service name="createProductionRunGroovyService" engine="groovy" location="component://ofbizDemo/groovyScripts/ ofbizDemo/CreateProductionRunGroovy.groovy" invoke="createProductionRunGroovy" auth="true">
        <description>Create a production run service in Groovy</description>
        <implements service="productionInterface" />
    </service>
    <service name="updateProductionRunDemo" engine="java" location="com.companyname.ofbizdemo.services.OfbizDemoServices" invoke="updateProductionRunDemo" auth="true">
        <description>Update a Production Run</description>
        <attribute name="productionRunId" type="String" mode="IN" optional="false" />
        <attribute name="quantity" type="BigDecimal" mode="IN" optional="true" />
        <attribute name="estimatedStartDate" type="Timestamp" mode="IN" optional="true" />
        <attribute name="workEffortName" type="String" mode="IN" optional="true" />
        <attribute name="description" type="String" mode="IN" optional="true" />
        <attribute name="facilityId" type="String" mode="IN" optional="true" />
    </service>
</services>